    //         const tracklistName = document.getElementById(`tracklistName-${index}`);
    //         navigator.clipboard.writeText(tracklistName.textContent).then(() => {
    //             alert('Text copied to clipboard.');
    //         }).catch((error) => {
    //             alert('Error when copying: ' + error);
    //         });
    //     });
    // });
  </script>

    

