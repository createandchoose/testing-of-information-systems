      {music.tracklist &&
        music.tracklist.map((tracklist) => {
          return (
            <div class="musiclist w-row">
                    <div class="column-2 w-col w-col-6">
                        <div class="numertrack">{tracklist.number}.</div>
                        <div>{tracklist.name}</div>
                    </div>
                    <div class="column w-col w-col-6">
                        <div class="tas">{tracklist.duration}</div>
                    </div>
                    
                </div>
          );                  
         })
      }
  </div> -->

</div>
<h1 class="heading-isssn"><strong>Gallery</strong></h1>
<div class="relises">
  {gallary &&
    gallary.map((gallary) => {
      return (
        <a href={getSanityImageURL(gallary.image).url()}>
          <div class="photo-box">{gallary.image && <CldImage width="100%" height="100%" alt={`${gallary.name} | ${gallary.description}`} src={getSanityImageURL(gallary.image).url()} />}</div>
        </a>
          );                  
    })
  }
</div>
<div class="nmusicnotes">
    <div class="w-row">
        <div class="column-4 w-col w-col-6">
            <h1 class="heading-ins">Production Notes</h1>
            <div class="tas">
              <SanityPortableText portableText={productNote} />         
            </div>
        </div>
        <div class="column-9 w-col w-col-6">
            <h1 class="heading-ins">Release Notes</h1>
            <div class="text-block-4">
              <LinerNotes />
              <SanityPortableText portableText={releaseNote} />
            </div>
        </div>
    </div>
</div>
</Layout>


<style>
  .namecopy {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
  }
  .copy {
    margin-left: 6px;
    margin-right: 6px;
    transition: 0.3s;
    opacity: 60%;
  }
  .copy:hover {
    cursor: pointer;
    opacity: 100%;
    transition: 0.3s;
  }
  .copy:active {
    opacity: 10%;
    cursor: pointer;
    transition: 0.05s;
  }

</style>